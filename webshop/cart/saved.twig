{% extends 'frontend/layout.twig' %}

{% block content %}
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="panel panel-primary">
				<div class="panel-heading">Saved carts</div>
				{% if carts %}
					<table class="table">
						<tr>
							<th>#</th>
							<th>Elements</th>
							<th>Total</th>
							<th>Load</th>
						</tr>

						{% for cart in carts %}
							<tr>
								<td>{{ cart.getId() }}</td>
								<td>{{ cart|length }}</td>
								<td>{{ cart.getPrice(true) }}</td>
								<td><a href="webshop/cart/cart/{{ cart.getId() }}">Load</a></td>
							</tr>
						{% endfor %}
					</table>
					<div class="panel-footer clearfix">
						<div class="pull-right">
							<a href="webshop/cart/reset" class="btn btn-danger">Reset</a>
						</div>
					</div>
				{% else %}
					<div class="panel-body"><i>There is no saved cart.</i></div>
				{% endif %}
			</div>
		</div>
	</div>
</div>
{% endblock %}
