{% extends 'frontend/layout.twig' %}

{% block content %}
<div class="wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <img class="img-thumbnail" src="http://placehold.it/550x650">
            </div>
            <div class="col-md-9">
                <h1>{{ product.getName() }} <small>#{{ product.getId() }}</small></h1>
                <span class="lead">{{ product.getPrice().getAmount() }}</span>
                <hr>

                <form action="{{ url('webshop/cart/add') }}" method="post">
                    <input type="hidden" name="id" value="{{ product.getId() }}">
                    <input type="hidden" name="quantity" value="1">
                    <button class="btn btn-success btn-bordered">Add to cart</button>
                </form>

                <button class="btn btn-default btn-bordered">Add to wishlist</button>
                <br> <br>
                <div>
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs nav-tabs-bordered">
                        <li class="active"><a href="#description" data-toggle="tab">Description</a></li>
                        <li><a href="#spec" data-toggle="tab">Specification</a></li>
                        <li><a href="#reviews" data-toggle="tab">Reviews</a></li>
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div class="tab-pane active" id="description">{{ product.getDescription() }}</div>
                        <div class="tab-pane tab-pane-table" id="spec">
                            <table class="table table-bordered table-striped">
                                <tr>
                                    <td>Spec 1</td>
                                    <td>Val 1</td>
                                </tr>
                                <tr>
                                    <td>Spec 2</td>
                                    <td>Val 2</td>
                                </tr>
                            </table>
                        </div>
                        <div class="tab-pane" id="reviews">Soon</div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>
</div>
{% endblock %}
