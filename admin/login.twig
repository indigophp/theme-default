<!DOCTYPE html>
<html lang="en" class="login">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
	<link rel="shortcut icon" href="{{ base_url() }}/assets/ico/favicon.png">

	<title>{% trans %}Sign In &raquo; {{ site_name }}{% endtrans %}</title>

	<link rel="stylesheet" href="{{ base_url() }}/assets/theme/css/style.min.css" title="{% trans 'Indigo theme' %}">

	<!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
	<!--[if lt IE 9]>
		<script src="{{ base_url() }}/assets/theme/js/lib/html5shiv.js"></script>
		<script src="{{ base_url() }}/assets/theme/js/lib/respond.min.js"></script>
	<![endif]-->
	</head>
	<body>
		<div class="container">
			<form method="post" action="" class="form-signin panel-primary panel">
				<div class="panel-heading">
					<h2 class="panel-title">{% trans 'Please sign in' %}</h2>
				</div>
				<div class="panel-body">
					<p class="text-danger">{{ session_get_flash('alert.error').formatted }}</p>
					<input name="username" type="text" class="form-control" placeholder="{% trans 'Email address' %}" autofocus required>
					<input name="password" type="password" class="form-control" placeholder="{% trans 'Password' %}" required>
					<div class="checkbox">
						<input name="remember-me" type="checkbox" value="remember-me" id="remember-me" data-toggle="switch">
						<label class="checkbox" for="remember-me">
							 {% trans 'Remember me' %}
						</label>
					</div>
				</div>
				<div class="panel-footer">
					<button class="btn btn-lg btn-primary btn-block" type="submit">{% trans 'Sign in' %}</button>
				</div>
			</form>

		</div> <!-- /container -->


	<script src="{{ base_url() }}assets/theme/js/lib/jquery.min.js"></script>
	<script src="{{ base_url() }}assets/theme/js/lib/bootstrap.min.js"></script>
	<script type="text/javascript">
		$(document).ready(function() {
			// IndigoAdmin.pageInit();
		});
	</script>
</body>
</html>
