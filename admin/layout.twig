<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
	<link rel="shortcut icon" href="{{ base_url() }}assets/ico/favicon.png">

	<title>{% if not title is empty %}{{ title }} &raquo; {% endif %}{{ site_name }}</title>

	{% block head %}
	<link rel="stylesheet" href="{{ base_url() }}assets/theme/css/bootstrap.min.css" title="Indigo theme">
	<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.0/css/font-awesome.css" rel="stylesheet">

	<!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
		<!--[if lt IE 9]>
			<script src="{{ base_url() }}assets/theme/js/html5shiv.js"></script>
			<script src="{{ base_url() }}assets/theme/js/respond.min.js"></script>
			<![endif]-->
	{% endblock %}

	</head>

<body>

	<div class="navbar navbar-default navbar-fixed-top">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<a class="navbar-brand" href="{{ base_url() }}admin">{{ site_name }}</a>
			<a class="navbar-brand" href="{{ base_url() }}"><small>{% trans 'back to site &raquo;' %}</small></a>
		</div>
		<div class="hidden-xs">

			<ul class="nav navbar-nav navbar-right">
				<li class="dropdown">
					<a href="" class="account dropdown-toggle" data-toggle="dropdown">
						<span class="menu-gravatar" style="background-image:url(https://secure.gravatar.com/avatar/{{ current_user.email | md5 }}?s=30&amp;d=mm)"></span>
						<span class="user-and-welcome-wrapper">
							<small class="welcome-text">{% trans 'welcome,' %}</small>
							<span class="username">{{ current_user.fullname }}</span>
						</span>
						<b class="caret"></b>
					</a>
					<ul class="dropdown-menu">
						<li><a href="{{ admin_url() }}profile">{% trans 'Profile' %}</a></li>
						<li class="divider"></li>
						<li><a href="{{ admin_url() }}logout">{% trans 'Sign out' %}</a></li>
					</ul>
				</li>
			</ul>
		</div>
		<div class="collapse navbar-collapse no-transition">
			<nav class="side-navigation">
				<div class="side-navigation-wrapper">
					<div class="visible-xs">
						<ul class="nav navbar-nav navbar-right">
							<li class="">
								<button class="account" data-toggle="collapse" data-target="#account-menu">
									<span class="menu-gravatar" style="background-image:url(https://secure.gravatar.com/avatar/{{ current_user.email | md5 }}?s=30&amp;d=mm)"></span>
									<span class="user-and-welcome-wrapper">
										<small class="welcome-text">{% trans 'welcome,' %}</small>
										<span class="username">{{ current_user.fullname }}</span>
									</span>
									<b class="caret"></b>
								</button>
								<ul class="collapse" id="account-menu">
									<li><a href="{{ admin_url() }}profile">{% trans 'Profile' %}</a></li>
									<li><a href="{{ admin_url() }}logout">{% trans 'Sign out' %}</a></li>
								</ul>
							</li>
						</ul>
					</div><!-- /.visible-xs -->
					{% include 'admin/menu.twig' with { 'items': admin_menu('indigo'), 'class': 'primary' } %}
				</div> <!-- /.side-navigation-wrapper -->
				<div class="side-navigation-footer">
					Aucsa
				</div>
			</nav>

		</div><!--/.nav-collapse -->
		<!-- </div> -->
	</div>



	<div class="content-wrap">
		{% if not session_get_flash('error') is null %}
			<div class="alert alert-dismissable alert-danger">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
				{{ session_get_flash('error') }}
				{% if errors %}
					{% block error_flash %}
						<ul>
							{% for field, error in errors %}
								<li>{{ field ~ ': ' ~ error }}</li>
							{% endfor %}
						</ul>
					{% endblock %}
				{% endif %}
			</div>
		{% endif %}
		{% if not session_get_flash('success') is null %}
			<div class="alert alert-dismissable alert-success">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
				{{ session_get_flash('success') }}
				{% block success_flash %}{% endblock %}
			</div>
		{% endif %}

		{% block content %}{% endblock %}

		<footer class="content-wrap-footer">
			<hr>
			{% set indigo_admin = 'Indigo Admin' %}
			{% set indigo_home = 'https://github.com/indigo-soft' %}
			{% set indigo = 'Indigo' %}
			{% set year = '2013' %}
			{% trans %}
				Â© {{ year }} {{ indigo_admin }} by <a href="{{ indigo_home }}">{{ indigo }}</a>
			{% endtrans %}
		</footer>

	</div><!-- /.content-wrap -->



	{% block javascript %}
	<script src="{{ base_url() }}assets/theme/js/jquery-1.11.0.min.js"></script>
	{# // <script src="{{ base_url() }}assets/theme/js/jquery-1.9.1.min.js"></script> #}
	<script src="{{ base_url() }}assets/theme/js/jquery-migrate-1.2.1.min.js"></script>
	<script src="{{ base_url() }}assets/theme/js/ckeditor/ckeditor.js"></script>
	<script src="{{ base_url() }}assets/theme/js/ckeditor/adapters/jquery.js"></script>
	<script src="{{ base_url() }}assets/theme/js/bootstrap.min.js"></script>
	<script src="{{ base_url() }}assets/theme/js/bootstrap-switch.min.js"></script>
	<script src="{{ base_url() }}assets/theme/js/bootstrap-select.min.js"></script>
	<script src="{{ base_url() }}assets/theme/js/moment-with-langs.min.js"></script>
	<script src="{{ base_url() }}assets/theme/js/bootstrap-datetimepicker.min.js"></script>
	<script src="{{ base_url() }}assets/theme/js/jquery.dataTables.min.js"></script>
	<script src="{{ base_url() }}assets/theme/js/datatables.js"></script>
	<script src="{{ base_url() }}assets/theme/js/admin.js"></script>
	{% endblock %}
	<script type="text/javascript">
		$(document).ready(function() {
			IndigoAdmin.pageInit('{{ base_url() }}');
			{% block documentready %}{% endblock %}
		});
	</script>
</body>
</html>
