<div class="theme-container">
	<img src="{{ admin_url() }}themes/preview/{{ theme.id }}.png" width="100" height="100" alt="" class="pull-left img-thumbnail">
	<div class="theme-inner">
		<h3>{{ theme.name }} <small>{{ theme.version }}</small></h3>
		<p><strong>{% trans 'Author:' %}</strong> {{ theme.author }}</p>
		<p>
			{% if theme.is_active %}
				<a href="#" disabled class="btn btn-sm btn-success active">{% trans 'Activated' %}</a>
			{% else %}
				<a href="{{ admin_url() }}themes/activate/{{ theme.id }}/{{ type }}" class="btn btn-sm btn-success">{% trans 'Activate' %}</a>
			{% endif %}
		</p>
	</div>
</div>